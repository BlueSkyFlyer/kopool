%h2 Edit a Matchup

%br
%br

%form.form-horizontal

  .form-group
    %label.col-sm-2 Home Team
    .col-sm-10
      %input.form-control{"type" => "text", "ng-model" => "matchup.home_team"}

  .form-group
    %label.col-sm-2 Away Team
    .col-sm-10
      %input.form-control{"type" => "text", "ng-model" => "matchup.away_team"}

  .form-group
    %label.col-sm-2 Game Time
    .col-sm-10
      %input.form-control{"type" => "text", "ng-model" => "matchup.game_time"}

  %button.btn.btn-success{"ng-click"=>"save(matchup)", type: "submit"} Save