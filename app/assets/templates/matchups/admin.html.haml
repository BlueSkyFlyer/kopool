%h3 Matchups - Admin

%br
%a.btn.btn-primary{"ng-href" => "#/weeks/{{week_id}}/matchups/new", role: "button"} Create New Matchup This Week
%br

%table.table.table-striped{"ng-controller" => "MatchupsCtrl"}
	%thead
		%tr
			%th 
			%th Home Team
			%th Away Team
			%th Game Time
	%tbody{"ng-repeat" => "matchup in matchups", "ng-click" => "selectMatchup(matchup)", "ng-switch" => "on=isSelected(matchup)"}
		%tr
			%td
				%p 
				%a{"ng-click" => "selectTie(matchup)", "ng-class" => "outcome_button_class(matchup)"} Tie Game!
			%td 
				%p.team_name {{ matchup.home_team.name}}
				%a{"ng-click" => "selectHomeTeamWin(matchup)", "ng-class" => "outcome_button_class(matchup)"} Select {{ matchup.home_team.name }} as winner!
			%td 
				%p.team_name {{ matchup.away_team.name}}
				%a{"ng-click" => "selectAwayTeamWin(matchup)", "ng-class" => "outcome_button_class(matchup)"} Select {{ matchup.away_team.name }} as winner!
			%td 
				%p {{ matchup.game_time }}
				%a.btn.btn-info{"ng-href" => "#/weeks/{{week_id}}/matchups/{{matchup.id}}", role: "button"} Edit
				%a.btn.btn-danger Delete

%a.btn.btn-success{"ng-click" => "saveWeekOutcomes(matchups)"} Save Results of this Week
				
				
